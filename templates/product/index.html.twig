{% extends 'home.html.twig' %}

{% block title %}Nos cailloux{% endblock %}

{% block content %}
    <div style="padding-top: 2rem" class="container">
        <h1>Nos cailloux</h1>
        <div>

                {{ form(form) }}
        </div>
        <hr>
        <div style="padding: 2rem">
            <div class="row">
                {% for product in products %}
                    <div class="col-md-4 card" style="margin-bottom: 0.5rem; padding: 1rem">
                        <div class="text-center">
                            <a href="{{ path('product', {'slug' : product.slug} ) }}" >
                                <img class="img-fluid" style="height: 250px; object-fit: cover" src="/uploads/{{ product.images }}" alt="{{ product.name }}">
                            </a>
                            <h5 style="margin-top: 1rem">{{ product.name }}</h5>
                            <span>{{ (product.price / 100)| number_format(2, ',', '.') }} â‚¬</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
