{% extends 'home.html.twig' %}

{% block title %} {{ product.name }} {% endblock %}

{% block content %}
    <div class="container" style="margin-top: 2rem">
        <div>
            <img src="/uploads/{{ product.images }}" alt="{{ product.name }}">
        </div>

        <div class="row">

            <div class="col-6">
                <h3>{{ product.name }}</h3>
                <p> {{ product.subtitle }}</p>
                <hr>
                <h4>Prix</h4>
                <span> {{ (product.price / 100)| number_format(2, ',', '.') }} â‚¬ </span>
                <hr>
                <h4>Description</h4>
                <p>
                    {{ product.description }}
                </p>

            </div>
            <div class="col-2"></div>
        </div>
        <div class="row">
            <div class="col-6"></div>
            <div class="col-4 text-center" style="margin-bottom: 3rem">
                <button id="btnCart" class="btn btn-primary"> <a href="{{ path('add_to_cart',{'id':product.id}) }}"></a>Ajouter au panier</button>

            </div>
        </div>

    </div>
    <script>
        document.getElementById("btnCart").onclick = function () {
            location.href="{{ path('add_to_cart',{'id':product.id}) }}"
        }
    </script>
{% endblock %}
